{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Dev Environment",
            "configurations": [
                "Ghost",
                "Theme"
            ]
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Ghost",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "ghost:start"
            ],
            "noDebug": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Theme",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "noDebug": true
        }
    ]
}
